<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:layout_marginLeft="18dp"
        tools:text="Name"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/amount"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        tools:text="Model name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lists_amount"
        android:layout_width="wrap_content"
        android:layout_below="@id/amount"
        android:textSize="24dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        tools:text="Lists amount"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_below="@id/lists_amount"
        android:textSize="24dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:text="@string/cart_model"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="48dp"
        android:layout_below="@id/cart"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        tools:background="@tools:sample/avatars"
        android:layout_height="48dp"
        android:id="@+id/black"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_below="@id/cart"
        tools:background="@tools:sample/avatars"
        android:layout_toEndOf="@id/black"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:id="@+id/blue"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_below="@id/cart"
        tools:background="@tools:sample/avatars"
        android:layout_toEndOf="@id/blue"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:id="@+id/red"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_below="@id/cart"
        tools:background="@tools:sample/avatars"
        android:layout_toEndOf="@id/red"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:id="@+id/yellow"/>

</RelativeLayout>